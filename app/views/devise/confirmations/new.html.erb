<div class="mx-auto max-w-md">
  <div class="card bg-base-100 shadow-xl ring-1 ring-base-300">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold">確認メール再送信</h2>
      <p class="text-sm text-base-content/70">確認メールが届いていない場合は、メールアドレスを入力して再送信してください。</p>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <fieldset class="fieldset mt-4">
          <%= f.label :email, class: "fieldset-legend" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary" %>
        </fieldset>

        <div class="mt-6">
          <%= f.submit "確認メールを再送信", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="divider">または</div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
