<div class="mx-auto max-w-md">
  <div class="card bg-base-100 shadow-xl ring-1 ring-base-300">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <fieldset class="fieldset mt-4">
          <%= f.label :email, class: "fieldset-legend" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary" %>
        </fieldset>

        <fieldset class="fieldset mt-4">
          <%= f.label :password, class: "fieldset-legend" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary" %>
        </fieldset>

        <% if devise_mapping.rememberable? %>
          <label class="label mt-4 cursor-pointer justify-start gap-3">
            <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
            <span class="label-text"><%= f.label :remember_me, "ログイン情報を保存する" %></span>
          </label>
        <% end %>

        <div class="mt-6">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="divider">または</div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
