<div class="mx-auto max-w-md">
  <div class="card bg-base-100 shadow-xl ring-1 ring-base-300">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold">パスワード変更</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <fieldset class="fieldset mt-4">
          <%= f.label :password, "新しいパスワード", class: "fieldset-legend" %>
          <% if @minimum_password_length %>
            <span class="label-text-alt text-base-content/60">（<%= @minimum_password_length %>文字以上）</span>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary" %>
        </fieldset>

        <fieldset class="fieldset mt-4">
          <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "fieldset-legend" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary" %>
        </fieldset>

        <div class="mt-6">
          <%= f.submit "パスワードを変更", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="divider">または</div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
