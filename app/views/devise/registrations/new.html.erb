<div class="mx-auto max-w-md">
  <div class="card bg-base-100 shadow-xl ring-1 ring-base-300">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <fieldset class="fieldset mt-4">
          <%= f.label :email, class: "fieldset-legend" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary" %>
        </fieldset>

        <div class="form-control mt-4">
          <%= f.label :nickname, "ニックネーム", class: "label" %>
          <%= f.text_field :nickname, class: "input input-bordered w-full", autocomplete: "nickname" %>
        </div>

        <div class="form-control mt-4">
          <%= f.label :cohort, "期", class: "label" %>

            <div class="flex items-center gap-2">
              <%= f.number_field :cohort,
                class: "input input-bordered w-32",
                min: 1,
                step: 1,
                inputmode: "numeric" %>
              <span class="text-base-content/70">期</span>
            </div>
        </div>


        <fieldset class="fieldset mt-4">
          <div class="flex items-center gap-2">
            <%= f.label :password, class: "fieldset-legend" %>
            <% if @minimum_password_length %>
              <span class="badge badge-ghost badge-sm"><%= @minimum_password_length %>文字以上</span>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary" %>
        </fieldset>


        <fieldset class="fieldset mt-4">
          <%= f.label :password_confirmation, "パスワード（確認）", class: "fieldset-legend" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary" %>
        </fieldset>

       <% if Rails.configuration.x.invite_key_required %>
         <fieldset class="fieldset mt-4">
           <%= f.label :invite_key, "合言葉", class: "fieldset-legend" %>
           <%= f.password_field :invite_key,
             autocomplete: "off",
             class: "input input-bordered w-full ring-1 ring-base-300 focus:ring-2 focus:ring-primary"
           %>
         </fieldset>
       <% end %>
        <div class="mt-6">
          <%= f.submit "登録する", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="divider">または</div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
