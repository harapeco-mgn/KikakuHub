<div class="mx-auto max-w-md px-4 py-8">
  <div class="card bg-base-100 shadow-xl ring-1 ring-base-300">
    <div class="card-body">
      <h1 class="card-title text-2xl font-bold">マイページ</h1>

      <dl class="mt-4 space-y-4">
        <div>
          <dt class="text-sm text-base-content/60">ニックネーム</dt>
          <dd class="text-lg font-semibold"><%= current_user.nickname %></dd>
        </div>

        <div>
          <dt class="text-sm text-base-content/60">期</dt>
          <dd class="text-lg font-semibold"><%= current_user.cohort_label %></dd>
        </div>

        <div>
          <dt class="text-sm text-base-content/60">メールアドレス</dt>
          <dd class="text-sm"><%= current_user.email %></dd>
        </div>
      </dl>

      <div class="mt-6 flex gap-2">
        <%= link_to "編集する", edit_user_registration_path, class: "btn btn-primary flex-1" %>
        <%= link_to "戻る", themes_path, class: "btn btn-ghost flex-1" %>
      </div>
    </div>
  </div>
</div>