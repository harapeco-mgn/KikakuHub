<div class="mx-auto max-w-4xl px-4 py-8">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-bold">テーマ一覧</h1>

    <% if user_signed_in? %>
      <%= link_to "テーマ作成", new_theme_path,
                  class: "rounded-md bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" %>
    <% end %>
  </div>

  <div class="space-y-4">
    <% @themes.each do |theme| %>
      <div class="rounded-2xl border bg-white p-5 shadow-sm">
        <div class="flex items-start justify-between gap-4">
          <div>
            <p class="text-xs text-gray-500">
              <span class="rounded-full bg-gray-100 px-2 py-1"><%= theme.category %></span>
              ・投稿者：<%= theme.user&.email || "unknown" %>
              ・<%= l(theme.created_at, format: :short) rescue theme.created_at.to_s %>
            </p>

            <h2 class="mt-2 text-lg font-semibold">
              <%= link_to theme.title, theme_path(theme), class: "hover:underline" %>
            </h2>

            <p class="mt-2 text-sm text-gray-700">
              <%= truncate(theme.description.to_s, length: 120) %>
            </p>
          </div>

          <div class="shrink-0">
            <%= link_to "詳細", theme_path(theme),
                        class: "text-sm text-indigo-600 hover:underline" %>
          </div>
        </div>
      </div>
    <% end %>

    <% if @themes.blank? %>
      <div class="rounded-2xl border bg-gray-50 p-6 text-center text-gray-600">
        まだテーマがありません。
      </div>
    <% end %>
  </div>
</div>