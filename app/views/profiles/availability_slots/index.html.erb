<h1 class="text-xl font-bold mb-4">参加可能時間</h1>

<div class="mb-4">
  <%= link_to "新規登録", new_profile_availability_slot_path, class: "btn btn-primary" %>
</div>

<div class="overflow-x-auto rounded-box border border-base-300 bg-base-100">
  <table class="table">
    <thead>
      <tr>
        <th>カテゴリ</th>
        <th>曜日</th>
        <th>開始</th>
        <th>終了</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% wdays = %w[月 火 水 木 金 土 日] %>
      <% @availability_slots.each do |slot| %>
        <tr>
          <td><%= slot.category %></td>
          <td><%= wdays[slot.wday] %></td>
          <td><%= format("%02d:%02d", slot.start_minute / 60, slot.start_minute % 60) %></td>
          <td><%= format("%02d:%02d", slot.end_minute / 60, slot.end_minute % 60) %></td>
          <td class="text-right">
            <%= button_to "削除", profile_availability_slot_path(slot), method: :delete,
                          data: { turbo_confirm: "削除しますか？" },
                          class: "btn btn-sm btn-outline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
